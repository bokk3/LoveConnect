# Environment variables for homelab deployment
# Copy this to .env and fill in your values

# Domain Configuration
DOMAIN=your-domain.com
TRAEFIK_DOMAIN=traefik.your-domain.com
GRAFANA_DOMAIN=monitoring.your-domain.com
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token

# SSL Configuration
ACME_EMAIL=your-email@your-domain.com

# Database Configuration
DB_ROOT_PASSWORD=your-super-secure-root-password
DB_NAME=loveconnect_prod
DB_USER=loveconnect
DB_PASSWORD=your-secure-db-password

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Monitoring
ENABLE_METRICS=true

# Security
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=your-traefik-password

# Cloudflare (if using DNS challenge)
CLOUDFLARE_EMAIL=your-cloudflare-email@domain.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Resource Limits
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
NGINX_WORKER_PROCESSES=auto

# TZ
TZ=America/New_York