# Production Environment Template
# Copy this to .env for production deployment
# CRITICAL: Change ALL passwords and secrets before deployment!

# Database Configuration - CHANGE THESE!
DB_HOST=localhost
DB_NAME=login_system_prod
DB_USER=loveconnect_prod_user
DB_PASS=REQUIRED_CHANGE_THIS_STRONG_PASSWORD
DB_PORT=3306

# Application Security - CHANGE THESE!
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_NAME="LoveConnect"

# Session Security - CHANGE THESE!
SESSION_LIFETIME=1440
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict

# Security Keys - GENERATE NEW ONES!
CSRF_SECRET=CHANGE_THIS_RANDOM_STRING_32_CHARS
SESSION_SECRET=CHANGE_THIS_RANDOM_STRING_64_CHARS

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_REDIRECT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=3
LOGIN_LOCKOUT_TIME=1800

# Email Configuration (for password reset)
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@your-domain.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_LEVEL=warning
LOG_PATH=/var/log/app.log

# Performance
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=30
PHP_POST_MAX_SIZE=10M
PHP_UPLOAD_MAX_FILESIZE=5M

# Cache Configuration (optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_ENABLED=false

# Backup Configuration (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30